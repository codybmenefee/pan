# =============================================================================
# Convex Configuration
# =============================================================================
# Get your Convex URL from the Convex dashboard after setting up your project
VITE_CONVEX_URL=https://your-project.convex.cloud

# Convex deploy key (for server-side API calls)
# Generate from Convex dashboard → Settings → Deploy Keys
CONVEX_DEPLOY_KEY=prod:your_deploy_key_here

# =============================================================================
# Clerk Authentication
# =============================================================================
# Get from Clerk dashboard → API Keys
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here

# Clerk secret key (for server-side/webhook verification)
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Clerk webhook signing secret (for billing webhooks)
# Get from Clerk dashboard → Webhooks → Your webhook → Signing Secret
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# Development Mode
# =============================================================================
# Set to "true" to bypass Clerk auth during local development
VITE_DEV_AUTH=false

# =============================================================================
# Braintrust Observability (Optional)
# =============================================================================
# For agent tracing and observability
# Get from Braintrust dashboard → Settings → API Keys
BRAINTRUST_API_KEY=your_braintrust_api_key
BRAINTRUST_PROJECT_NAME=grazing-agent
