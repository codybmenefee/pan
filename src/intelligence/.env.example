# Intelligence Layer Environment Configuration
# Copy this to .env and fill in your values

# Anthropic API (required for LLM recommendations)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-haiku-4-5-20251001

# OpenRouter (alternative provider)
LLM_PROVIDER=anthropic  # or "openrouter"
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-haiku-4.5

# Timeout settings
ANTHROPIC_TIMEOUT=60
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.1

# Farm defaults
DEFAULT_NDVI_THRESHOLD=0.40
DEFAULT_REST_PERIOD_DAYS=21
DEFAULT_SECTION_PERCENT=0.20

# Data cache directories
PADDOCK_CACHE_DIR=/tmp/paddock_cache
NDVI_CACHE_DIR=/tmp/ndvi_cache
