{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "build": {
        "src": "app",
        "packageManager": "pnpm"
      }
    }
  },
  "deploy": {
    "startCommand": "npx serve -s dist -l $PORT",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30,
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  },
  "env": {
    "unsafe": {
      "allowed": [
        "VITE_CONVEX_URL",
        "VITE_POSTHOG_ENABLED",
        "VITE_POSTHOG_KEY",
        "VITE_POSTHOG_HOST"
      ]
    }
  }
}
